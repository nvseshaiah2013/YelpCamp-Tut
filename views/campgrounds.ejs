<% include partials/header %>

<header class="jumbotron"><h1>Welcome to YelpCamp</h1>
    <p>View our campgrounds from all over the world</p>
<p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add a New Campgrounds</a></p>
</header>


<br>
<div class="row" style="display:flex;flex-wrap:wrap;">
<% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
        <img src="<%= campground.image %>" alt="Hello World">
        <div class="caption">
            <%= campground.name %>
        </div>
        </div>
            </div>
<% }); %>
</div>
<% include partials/footer %>