<% include ../partials/header %>
<div class="container-fluid lgBox mt-2">
    <h1 class="my-2">Add a new Comment for <%= camp.name %></h1>

    <div class="formbox">
        <form method="POST" action="/campgrounds/<%= camp._id %>/comments">

            <div class="form-group">
                <input type="text" name="comment[text]" placeholder="Enter Text" class="form-control" />
            </div>

            <div class="form-group">
                <input type="text" name="comment[author]" placeholder="Enter Author" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn btn-danger btn-block">Submit!!!</button>
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>